<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.ucai.fulicenter.fragments.Fragment_Cart">

    <LinearLayout
        android:id="@+id/ll_cart_sum"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="合计:"
                android:gravity="center"
                android:textColor="@color/orange"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="节省:"
                android:gravity="center"
                android:textColor="@color/red"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_sumPrice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="￥0"
                android:gravity="center"
                android:textColor="@color/orange"/>
            <TextView
                android:id="@+id/tv_savePrice"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="￥0"
                android:gravity="center"
                android:textColor="@color/red"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_cart_buy"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@color/main_orange"
            android:text="购买"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black2"/>
    <!--<include
        layout="@layout/fragment_fragment__new_goods"/>-->
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cn.ucai.fulicenter.fragments.Fragment_NewGoods">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/now_refresh"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_cart_clean"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="购物车空空如也\n\n快去选购吧"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/google_yellow"
                android:visibility="gone"/>
            <!-- TODO: Update blank fragment layout -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
