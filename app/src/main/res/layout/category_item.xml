<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="340dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="20dp">
        <RelativeLayout
            android:id="@+id/rl_category_item"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/iv_category_avatar"
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/tv_category_name"
                android:layout_toRightOf="@+id/iv_category_avatar"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="æœ€IN"/>
            <ImageView
                android:id="@+id/iv_category_arrow"
                android:layout_toRightOf="@+id/tv_category_name"
                android:layout_marginLeft="100dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/expand_on"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
